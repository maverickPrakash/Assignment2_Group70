@{
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LocoTrade</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApp1.styles.css" asp-append-version="true" />

</head>
<body>
    <header>
        <div class="wrap">
            <div class="web-logo">
                <a asp-action="index" asp-controller="Home"><img src="~/logo.png" class="logo" /></a>
            </div>
            
            <div class="Sellbtns">
                <ul>
                    <li><a asp-action="index" asp-controller="Home">Website Home</a></li>
                    <li><a asp-action="index" asp-controller="Seller">Seller Panel Home</a></li>
                    <li><a asp-action="AddItem" asp-controller="Seller">Add item</a></li>
                     <li><a  asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">Logout</a></li>
                </ul>
            </div>
        </div>

     
        
    </header>


     <div>
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer>

       
        
            <p class="copy-right"> &copy; 2023 - LocoTrade - <a asp-area="" asp-controller="Home" asp-action="Index">LocoTrade</a></p>
      
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
