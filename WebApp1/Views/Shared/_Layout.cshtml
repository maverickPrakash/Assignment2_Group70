<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LocoTrade</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApp1.styles.css" asp-append-version="true" />

</head>
<body>
    <header>
        <div class="wrap">
            <div class="web-logo">
                <a asp-action="index" asp-controller="Home"><img src="~/logo.png" class="logo" /></a>
            </div>
            <div class="search-bar">
               
                <form asp-controller="Search" method="get" asp-action="Search">
                    <input type="text" name="value"  id="value" class="txtSearch" />
                    <input type="submit" value="Search" class="btn btn btn-warning searchButton">
                </form>
            </div>
            @*<div class="btns">
            <div class="register">
            <a class="sec-last" asp-area="" asp-controller="User" asp-action="Register">Register</a>
            </div>
            <div class="login">
            <a class="last" asp-area="" asp-controller="User" asp-action="Login">Login</a>
            </div>
            </div>*@
           
            <div>
                <partial name="_LoginPartial" />
            </div>
        </div>
        <nav class="second-nav">
            <ul>
                @if (User.Identity.IsAuthenticated)
                {
                    if (User.IsInRole("Seller"))
                    {
                       <li style="float: left"> <a asp-controller="Seller" asp-action="Index">Seller Panel</a> </li>
                        <li style="float: left"> <a asp-controller="Buyer" asp-action="Index">Buyer Panel</a> </li>
                    }

                    if (User.IsInRole("Buyer"))
                    {
                       <li style="float: left"> <a asp-controller="Buyer" asp-action="Index">Buyer Panel</a> </li>
                    }

                     if (User.IsInRole("Admin"))
                    {
                       <li style="float: left"> <a asp-controller="Admin" asp-action="Index">Admin Panel</a> </li>
                    }
                }
                <li><a asp-action="QueueResult" asp-route-item="Electronic" asp-controller="Search" class="elc">Electronics</a></li>
                <li><a asp-action="QueueResult" asp-route-item="Home" asp-controller="Search" class="elc">Home</a></li>
                <li><a asp-action="QueueResult" asp-route-item="Fashion" asp-controller="Search" class="elc">Fashion</a></li>
                <li><a asp-action="QueueResult" asp-route-item="Books" asp-controller="Search" class="elc">Books</a></li>
            </ul>
        </nav>

    </header>
    <div>
        <main role="main">
            @RenderBody()
            <script>
                var today = new Date().toISOString().split('T')[0];
                document.getElementById("datetimepicker").setAttribute('min', today);
            </script>
        </main>
    </div>

    <footer>

        <h1>Developed By the Group 70</h1>
