<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LocoTrade</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApp1.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <div class="wrap">
            <div class="web-logo">
                <a asp-action="index" asp-controller="Home"><img src="~/logo.png" class="logo" /></a>
            </div>
            <div class="search-bar">
                <form asp-controller="Search" asp-action="index">
                    <input type="text" name="item" class="txtSearch" />
                    <input type="submit" value="Search" class="searchButton">
                </form>
            </div>
            <div class="btns">
            <div class="register">
                    <a asp-action="register" class="sec-last">Register</a>
                </div>
                <div class="login">
                    <a asp-action="login" class="last">Login</a>
                </div>

            </div>
            
        </div>

        <nav class="second-nav">
            <ul>
                <li><a asp-action="" class="elc">Electronics</a></li>
                <li><a asp-action="index" asp-controller="Home" class="home">Home</a></li>
                <li><a asp-action="" class="fash">Fashion</a></li>
                <li><a asp-action="" class="books">Books</a></li>
            </ul>
        </nav>

    </header>
    <div class="container pt-5">
        <main role="main" class="pb-3 pt-5">
            @RenderBody()
        </main>
    </div>

    <footer>

