<div class="container">
    <div class="row pb-3">
        <div class="col-9 pt-5">
            <h1>Products</h1>                
        </div>
        <div class="col-2 pt-5 text-right">
            <div class="dropdown show">
              <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Sort By
              </a>

              <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                    <a class="dropdown-item" asp-action="QueueResultSort" asp-route-item="@ViewBag.Item" asp-route-field="Name" asp-route-order="DESC">Name</a>
                    <a class="dropdown-item"  asp-action="QueueResultSort" asp-route-item="@ViewBag.Item" asp-route-field="Cost" asp-route-order="ASC">Price High to Low</a>
                    <a class="dropdown-item" asp-action="QueueResultSort" asp-route-item="@ViewBag.Item" asp-route-field="Cost" asp-route-order="DESC">Price Low to High</a>
                </div>
            </div>
        </div>
    </div>    
    <div class="row">

        @foreach (var item in Model)
        {

            <div class="col-2 item-container">
                @{
                    string url = "../images/" + item.Image + ".jpg";
                }

                <div class="container">
                    <div class="row  item-image-container">
                        <div class="col-12">
                            <a asp-action="Details" asp-route-id="@item.Id" class="item-link">
                                <img class="item-image" src="@url" alt="Sample Photo" />
                            </a>
                        </div>
                    </div>
                    <div class="row p-2">
                        <div class="col-12 ">
                            <h5>@Html.DisplayFor(modelItem => item.Name)</h5>
                        </div>
                        <div class="col">
                            <small>@Html.DisplayFor(modelItem => item.Description)</small>
                        </div>
                        <div class="col">
                            <span class="text-primary"> $@Html.DisplayFor(modelItem => item.Cost)</span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-9 offset-1 align-self-center pt-2">
                        <button class="btn btn-primary w-100" asp-action="IncrementCost">Add Bid</button>
                    </div>
                </div>

            </div>

        }
    </div>

</div>