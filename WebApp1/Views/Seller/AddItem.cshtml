@model WebApp1.Models.Product
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "_sellerPanelTemplate";
}
<h2 class="add">Add Item</h2>
<hr />
<div class="create">
    <div class="col-md-12">
        <div class="seller_id">
                <label class="id-label">Seller ID</label>
                <input class="input-id" placeholder="SELLER ID" required/>            
            </div>
        <form asp-action="Create" class="create_form">
            <fieldset>
                <legend>Product</legend>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="input-control" placeholder="PRODUCT NAME"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="input-control" placeholder="PRODUCT DESCRIPTION" ></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Cost" class="control-label"></label>
                <input asp-for="Cost" class="input-control" placeholder="PRODUCT COST" />
                <span asp-validation-for="Cost" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="input-control" type="datetime-local" value="2023-01-12T19:30"
                min="2023-02-20T00:00" max="2023-04-30T00:00" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" class="input-control" type="datetime-local" value="2023-01-12T19:30"
                min="2023-02-21T00:00" max="2023-05-30T00:00" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <label asp-for="Asset_condition" class="control-label"></label>
                <select asp-for="Asset_condition" class="input-control">
                    <option value="">CONDITION</option>
                    <option value="new">New</option>
                    <option value="good">Good</option>
                    <option value="used">Used</option>
                </select>
                <span asp-validation-for="Asset_condition" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <select asp-for="Category" class="input-control">
                    <option value="">CATEGORY</option>
                    <option value="home">Home</option>
                    <option value="comp">Computer</option>
                    <option value="fash">Fashion</option>
                    <option value="elec">Electronics</option>
                    <option value="book">Books</option>
                    <option value="game">Games</option>
                </select>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" class="input-control" type="file" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-btn">
                <input type="submit" value="Create" class="btn-primary" />
            </div>
            </fieldset>
        </form>
    </div>
</div>

<div class="back">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
