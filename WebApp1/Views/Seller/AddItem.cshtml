@model IEnumerable<Category>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "_sellerPanelTemplate";
}
<h2 class="add">Add Item</h2>
<hr />
<div class="create">
    <div class="col-md-12">
       
        <form asp-action="Create" class="create_form">
            <fieldset>
                <legend>Product</legend>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
             <div class="seller_id form-group">
                <label class="id-label">Seller ID</label>
                <input class="input-id" placeholder="SELLER ID" required/>            
            </div>
            <div class="form-group">
                <label  class="control-label"></label>
                <input class="input-control" placeholder="PRODUCT NAME"/>
                <span  class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label  class="control-label"></label>
                <textarea class="input-control" placeholder="PRODUCT DESCRIPTION" ></textarea>
                <span  class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label  class="control-label"></label>
                <input  class="input-control" placeholder="PRODUCT COST" />
                <span  class="text-danger"></span>
            </div>

            <div class="form-group">
                <label  class="control-label"></label>
                <input  class="input-control" type="datetime-local" value="2023-01-12T19:30"
                min="2023-02-20T00:00" max="2023-04-30T00:00" />
                <span  class="text-danger"></span>
                <label class="control-label"></label>
                <input class="input-control" type="datetime-local" value="2023-01-12T19:30"
                min="2023-02-21T00:00" max="2023-05-30T00:00" />
                <span  class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <label  class="control-label"></label>
                <select  class="input-control">
                    <option value="">CONDITION</option>
                    <option value="new">New</option>
                    <option value="good">Good</option>
                    <option value="used">Used</option>
                </select>
                <span  class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label  class="control-label">Category</label>
                <select  class="input-control">
                        @foreach( Category c in Model)
                        {
                            <option value="@c.CategoryId">@c.CategoryName</option>
                        }
                        
                   
                </select>
                <span  class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label  class="control-label"></label>
                <input  class="input-control" type="file" />
                <span class="text-danger"></span>
            </div>
            <div class="form-btn">
                <input type="submit" value="Create" class="btn-primary" />
            </div>
            </fieldset>
        </form>
    </div>
</div>

<div class="back">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}