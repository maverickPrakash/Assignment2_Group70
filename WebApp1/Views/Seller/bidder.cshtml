@model IEnumerable<Bid>

@{
    Layout = "_sellerPanelTemplate";
}

<h2 class="seller-head">Bidder</h2>

@foreach(var prop in Model){
<table class="item-table">
    <tr>
        <td>Item Name</td>
        <td>@prop.Product.Name</td>
    </tr>

    <tr>
        <td>Cost</td>
        <td>@prop.Cost</td>
    </tr>

     <tr>
        <td>Decision</td>
        <td>@prop.Bidstatus</td>
    </tr>
     <tr>
        <td>Bidder</td>
        <td>@prop.Bidder</td>
    </tr>
       
           
               
            

        
    <tr>
        <td> <a asp-controller="Seller" asp-action="approve" asp-route-id="@prop.Cost" class="btn btn-primary" >Approve Bid</a>
         <a asp-controller="Seller" asp-action="reject" asp-route-id="@prop.Cost" class="btn btn-danger" > Reject Bid</a></td>
        
    </tr>
   
  </table>
  <br/><br/>
}
