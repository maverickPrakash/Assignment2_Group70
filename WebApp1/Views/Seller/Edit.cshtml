@model Product;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "_sellerPanelTemplate";
}
<h2 class="add">Edit Item</h2>
<hr />

 <div class="edi">
    <div class="col-md-12">
       
        <form  enctype="multipart/form-data" method="post" class="edit-form">
          <fieldset>
                <legend style="margin: 10px">Product</legend>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
             
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label  class="control-label">Product Name</label>
                        <input asp-for="Name" class="input-cont" placeholder="PRODUCT NAME"/>
                        <span  class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label  class="control-label">Description</label>
                        <textarea asp-for="Description" class="input-cont" placeholder="PRODUCT DESCRIPTION" ></textarea>
                        <span  class="text-danger"></span>
                    </div>
                </div>

                <div class="col-sm-6">
                    <div class="form-group">
                        <label  class="control-label">Start Bid</label>
                        <input asp-for="StartBidDate" class="input-cont" type="datetime-local" value="2023-01-12T19:30"
                        min="2023-02-20T00:00" max="2023-04-30T00:00" />
                        <span  class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">End Bid</label>
                        <input asp-for="ExpiryBidDate" class="input-cont" type="datetime-local" value="2023-01-12T19:30"
                        min="2023-02-21T00:00" max="2023-05-30T00:00" />
                        <span  class="text-danger"></span>
                    </div>
                </div>
                
            </div>
            <div class="row">
                <div class="col-sm-6"> 
                    
                        <div class="form-group">
                            <label  class="control-label">Cost</label>
                            <input asp-for="Cost"  class="input-control" placeholder="PRODUCT COST" />
                            <span  class="text-danger"></span>
                        </div>
           
                    <div class="form-group">
                        <label  class="control-label">Asset Condition</label>
                        <select asp-for="Asset_condition"  class="input-control">
                            <option value="">CONDITION</option>
                            <option value="new">New</option>
                            <option value="good">Good</option>
                            <option value="used">Used</option>
                        </select>
                        <span  class="text-danger"></span>
                    </div>
            
                    <div class="form-group">
                        <label  class="control-label">Category</label>
                        <select class="input-control">
                        
                              <option>Any</option>
                   
                        </select>
                        <span  class="text-danger"></span>
                    </div>
                </div>
                    <div class="col-sm-6">
                        
                            <div class="form-group">
                                <label  class="control-label">Product Image</label>
                            </div>
                            <div class="form-group">
                                <img src="~/Images/@Html.DisplayFor(model => model.Image)" style=" height:auto" />
                            </div>
                            <input name="ImageFile"  class="input-control" type="file" />
                            <span class="text-danger"></span>
                        
                     </div>   
            </div>
            <hr />
                <div class="edit-form-btn">
                    <button type="button" class="btn btn-info">Update</button> 
                    <a asp-action="index" asp-controller="Seller" type="button" class="btn btn-danger">Cancel</a>
                </div>
          </fieldset>
        </form>
    </div>
</div>

<div class="back">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}