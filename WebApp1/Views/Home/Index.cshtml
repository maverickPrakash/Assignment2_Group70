            <img src="~/Images/@item.Image" style="width:100%; height:100%">
       
            <h5>@item.Name</h5>
     
     
                <h4 class="mr-1"> <span class="text-price"> $ @item.Cost</span></h4>
            </div>
            

</a>
}
