@model IEnumerable<Product>;
@{
    ViewData["Title"] = "Home Page";
}



<div class="welcome container  pt-5">
    <div class="welcome-container">
        <div class="welcome-text">
            <h1>Welcome to LocoTrade @ViewData["User"]</h1>
            <h3>Best Place for biding item</h3>
            <a asp-fragment="mainDisplay" class="bid-button">Start Bidding</a>
        </div>
        <div class="welcome-img">
            <img src="Header_img.png">
        </div>

    </div>
</div>
<div id="BidSection">
<h3>Recently Added Item</h3>
<div id="newBid" >
    

    @foreach (var item in Model)
{
    
<a asp-action="Details" asp-controller="Search" asp-route-id="@item.Id">

